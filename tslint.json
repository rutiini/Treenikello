{
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": [false, "log", "error"],
    "react-hooks-nesting": "error",
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "trailing-comma": true
  }
}
